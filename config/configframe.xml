					<Anchor point="TOPRIGHT" x="-16" y="-16"/>
				</Anchors>
				<Scripts>
					<OnClick function="ReloadUI"/>
				</Scripts>
			</Button> -->
			<ScrollFrame name="$parent_ScrollFrame" inherits="UIPanelScrollFrameTemplate">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentSubText" relativePoint="BOTTOMLEFT" x="0" y="-8"/>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT" x="0" y="16"/>
					<Anchor point="RIGHT" relativeTo="$parent" relativePoint="RIGHT" x="-40" y="0"/>
				</Anchors>
				<ScrollChild>
					<Frame name="lsOptionsMainFrame">
						<Size x="566" y="2560"/>
					</Frame>
				</ScrollChild>
				<Scripts>
					<OnShow>
						self.ScrollBar.scrollStep = 40
					</OnShow>
				</Scripts>
			</ScrollFrame>
		</Frames>
	</Frame>

